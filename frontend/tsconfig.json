{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["ES2015", "ES2016", "DOM"],
        "jsx": "react",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@style/*": ["src/style/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@common/*": ["src/common/*"],
            "@pages/*": ["src/pages/*"],
            "@types/*": ["src/types/*"]
        },
        "types": ["node", "jest"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*",
        "**/*.ts",
    ],
    "exclude": ["node_modules"]
}
